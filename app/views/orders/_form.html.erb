<%= form_for(@order, url: cow_orders_path) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this stuff from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cut %><br>
    <%= f.select :cut, ['chuck', 'rib', 'brisket', 'shank', 'plate', ['short loin', 'short_loin'], 'sirloin', ['top sirloin', 'top_sirloin'], ['bottom sirloin', 'bottom_sirloin'], 'tenderloin', 'round', 'flank']%>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount, :step => 'any' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
